{
  "extends": "./tsconfig.build.json",
  "include": ["src/examples/**/*"],
  "exclude": ["node_modules", "dist", "src/__tests__", "src/samples"], // keep src/examples
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}